# Herbal Trace Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# Security Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-change-this-in-production
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
BCRYPT_SALT_ROUNDS=12

# Database Configuration (PostgreSQL for off-chain data)
DATABASE_URL="postgresql://username:password@localhost:5432/herbaltrace_db"
REDIS_URL="redis://localhost:6379"

# Firebase Admin SDK (for user management and notifications)
FIREBASE_PROJECT_ID=traceherb-a0011
FIREBASE_PRIVATE_KEY_ID=your-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@traceherb-a0011.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# Hyperledger Fabric Configuration
FABRIC_NETWORK_PATH=../network
FABRIC_WALLET_PATH=./wallet
FABRIC_CA_URL=https://localhost:7054
FABRIC_PEER_URL=grpc://localhost:7051
FABRIC_ORDERER_URL=grpc://localhost:7050
FABRIC_CHANNEL_NAME=herbaltrace-channel
FABRIC_CHAINCODE_NAME=herbaltrace
FABRIC_MSP_ID=FarmersCoopMSP
FABRIC_USER_ID=appUser

# Email Configuration (for OTP)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (Twilio for mobile OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-super-secure-session-secret
CORS_ORIGIN=http://localhost:3000

# Blockchain Network Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
ETHEREUM_PRIVATE_KEY=your-ethereum-private-key
CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# Monitoring and Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
ENABLE_AUDIT_LOG=true
AUDIT_LOG_FILE=./logs/audit.log

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Caching Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# API Rate Limiting
API_RATE_LIMIT=1000
API_WINDOW_MS=3600000

# Development/Production Settings
ENABLE_SWAGGER=true
ENABLE_CORS=true
TRUST_PROXY=true