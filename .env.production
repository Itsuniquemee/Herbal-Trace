# Environment Variables for HerbalTrace Deployment

# PostgreSQL Configuration
POSTGRES_USER=herbaltrace
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_DB=herbaltrace_db

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Secrets
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_change_this_in_production

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=traceherb-a0011
FIREBASE_AUTH_DOMAIN=traceherb-a0011.firebaseapp.com
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@traceherb-a0011.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-domain.com

# Email Configuration (Optional)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Twilio SMS Configuration (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
